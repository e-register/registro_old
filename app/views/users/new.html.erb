<%= form_for :create do |f| %>
    Username: <%= text_field :user, :username, class: "form-control" %><br>
    Password: <%= password_field :user, :password, class: "form-control" %><br>
    Conferma password: <%= password_field :user, :password_confirmation, class: "form-control" %><br>
    Nome: <%= text_field :user, :name, class: "form-control" %><br>
    Cognome: <%= text_field :user, :surname, class: "form-control" %><br>
    Data di nascita: <%= date_field :user, :born_date, class: "form-control" %><br>
    Comune di nascita: <%= text_field :user, :born_city, class: "form-control" %><br>
    <%= f.submit "Crea", class: [ "btn", "btn-success" ] %>
<% end %>
